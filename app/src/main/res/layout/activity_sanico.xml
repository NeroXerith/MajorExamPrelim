<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sanico"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg">
        </FrameLayout>

        <TextView
            android:id="@+id/stdname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/std_name"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:layout_alignParentTop="true" />

        <LinearLayout
            android:id="@+id/reelsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/stdname"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_marginTop="40dp">

                <TextView
                    android:id="@+id/reel1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="100sp"
                    android:layout_marginEnd="15dp"
                    android:background="@color/gray"/>

                <TextView
                    android:id="@+id/reel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="100sp"
                    android:layout_marginEnd="15dp"
                    android:background="@color/gray"/>

                <TextView
                    android:id="@+id/reel3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="100sp"
                    android:layout_marginEnd="15dp"
                    android:background="@color/gray"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/userInputs"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@id/reelsLayout"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_marginTop="40dp">
                <EditText
                    android:id="@+id/betInput1"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@color/gray"
                    android:text=""
                    android:textSize="40sp"
                    android:layout_marginEnd="15dp"
                    />
                <EditText
                    android:id="@+id/betInput2"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@color/gray"
                    android:text=""
                    android:textSize="40sp"
                    android:layout_marginEnd="15dp"
                    />
                <EditText
                    android:id="@+id/betInput3"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@color/gray"
                    android:text=""
                    android:textSize="40sp"
                    android:layout_marginEnd="15dp"
                    />
                <EditText
                    android:id="@+id/betAmount"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@color/gray"
                    android:text=""
                    android:textSize="40sp"
                    android:layout_marginEnd="15dp"
                    />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/multiBal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@id/userInputs"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_marginTop="40dp">
                <TextView
                    android:id="@+id/multiplier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@color/gray"
                    android:text="x2"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:layout_marginEnd="100dp"
                    />

                <TextView
                    android:id="@+id/userBalance"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="1000.00"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:layout_marginEnd="15dp"
                    />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/txtResult"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@id/multiBal"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@color/gray"
                    android:textAlignment="center"
                    android:text="WIN"
                    android:textColor="@color/white"
                    android:textSize="75sp"
                    />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/actButtons"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@id/txtResult"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_marginTop="30dp">
                <Button
                    android:id="@+id/btnAction"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:background="@color/gray"
                    android:layout_marginBottom="20dp"
                    android:text="PLAY"
                    android:textSize="35sp"
                        />
                <Button
                    android:id="@+id/btnReset"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:background="@color/gray"
                    android:text="RESET"
                    android:textSize="35sp"
                    />
        </LinearLayout>
</RelativeLayout>